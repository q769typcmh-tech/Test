end)

-- Exemplo simples: tecla para morph / unmorph
local UserInputService = game:GetService("UserInputService")

-- Troque "Dragon" pelo nome do model em ServerStorage.Morphs
local TARGET_MORPH_NAME = "Dragon"

local morphed = false

UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.M then
        if not morphed then
            RequestMorph:FireServer("morph", TARGET_MORPH_NAME)
            morphed = true
        else
            RequestMorph:FireServer("unmorph")
            morphed = false
        end
    end
end)